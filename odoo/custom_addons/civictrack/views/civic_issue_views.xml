<odoo>
    <record id="view_civic_issue_form" model="ir.ui.view">
        <field name="name">civic.issue.form</field>
        <field name="model">civic.issue</field>
        <field name="arch" type="xml">
            <form string="Civic Issue">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="category"/>
                        <field name="description"/>
                        <field name="location"/>
                        <field name="image"/>
                        <field name="state"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_civic_issue_tree" model="ir.ui.view">
        <field name="name">civic.issue.tree</field>
        <field name="model">civic.issue</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="category"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="action_civic_issue" model="ir.actions.act_window">
        <field name="name">Civic Issues</field>
        <field name="res_model">civic.issue</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
